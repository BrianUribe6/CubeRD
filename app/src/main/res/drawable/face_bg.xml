<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundColor"/>
            <corners android:radius="6dp"/>
            <padding
                android:top="3dp"
                android:left="3dp"
                android:bottom="3dp"
                android:right="3dp"/>
